{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "nodenext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "nodenext",
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": [
    "src/",
    "docs/src",
    "node_modules/vitest/global.d.ts",
    "mode_modules/@types/react"
  ]
}
